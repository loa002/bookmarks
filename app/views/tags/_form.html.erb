<%= form_with model: tag do |form| %>
  <div>
    <%= form.label :name %>:
    <%= form.text_field :name %>
    <% tag.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :color %>:
    <%= form.text_field :color %>
    <% tag.errors.full_messages_for(:color).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
